<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/coinPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Name"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintHorizontal_weight="0.33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coinPrice"
        app:layout_constraintLeft_toLeftOf="@id/coinPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Value"
        android:textStyle="bold"
        app:layout_constraintHorizontal_weight="0.33"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/volume"
        app:layout_constraintStart_toEndOf="@+id/coinPrice"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_minValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mCap"
        app:layout_constraintLeft_toLeftOf="@id/mCap"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintHorizontal_weight="0.33"
        android:gravity="right"
        android:text="Max Value"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mCap"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_maxValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/volume"
        app:layout_constraintLeft_toLeftOf="@id/volume"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>